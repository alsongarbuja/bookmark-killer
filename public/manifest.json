{
  "manifest_version": 3,
  "name": "unmark",
  "version": "0.2.0",
  "description": "Tired of those piled up bookmarks, clear them out easily or add reminders to check them later instead of letting them pile up.",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/unmark-icon-16x16.png",
    "32": "icons/unmark-icon-32x32.png",
    "64": "icons/unmark-icon-64x64.png",
    "128": "icons/unmark-icon-128x128.png"
  },
  "permissions": ["bookmarks", "tabs", "notifications"]
}
