{
  "manifest_version": 3,
  "name": "unmark",
  "version": "0.6.0",
  "description": "Tired of those piled up bookmarks, add reminders to check them later and clear afterwards.",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/unmark-icon-16x16.png",
    "32": "icons/unmark-icon-32x32.png",
    "64": "icons/unmark-icon-64x64.png",
    "128": "icons/unmark-icon-128x128.png"
  },
  "permissions": ["bookmarks", "tabs", "notifications", "alarms", "background"],
  "background": {
    "service_worker": "alarm.js"
  }
}
